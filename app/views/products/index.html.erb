<div class="page-header">
  <h1>Product</h1>
</div>

  <div class="well">
    <%= render 'filter' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Country</th>
          <th>Price</th>
          <th>Tags</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= product.country %></td>
            <td><%= product.price %></td>
            <td><%= render_tags(product.tags) %></td>
            <td><%= product.description %></td>
            <td>
              <%= link_to product_path(product), remote: true do %>
                <span class="glyphicon glyphicon-eye-open"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<%= paginate @products %>
<div id="product_details" class="modal fade" role="dialog"></div>
